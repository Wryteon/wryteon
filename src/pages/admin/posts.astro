import { getAllPosts, deletePost } from "../../lib/db";
import { validateSession } from "../../lib/auth";
import type { PostRecord } from "../../lib/db";

export const prerender = false;

// Validate session
const cookies = Astro.request.headers.get("cookie") || "";
const sessionToken = cookies
  .split(";")
  .find((c) => c.trim().startsWith("session="))
  ?.split("=")[1];

const session = sessionToken ? await validateSession(sessionToken) : null;
if (!session) {
  return Astro.redirect("/auth/login");
}

const isDeletePayload = (value: unknown): value is { id: string } => {
  if (typeof value !== "object" || value === null) {
    return false;
  }

  const candidate = value as { id?: unknown };
  return typeof candidate.id === "string" && candidate.id.length > 0;
};

// Handle DELETE request
if (Astro.request.method === "DELETE") {
  const data = await Astro.request.json();

  if (isDeletePayload(data)) {
    const removed = await deletePost(data.id);
    if (removed) {
      return new Response(JSON.stringify({ success: true }), {
        status: 200,
        headers: { "Content-Type": "application/json" },
      });
    }

    return new Response(JSON.stringify({ error: "Post not found" }), {
      status: 404,
      headers: { "Content-Type": "application/json" },
    });
  }

  return new Response(JSON.stringify({ error: "Post ID required" }), {
    status: 400,
    headers: { "Content-Type": "application/json" },
  });
}

const posts: PostRecord[] = await getAllPosts();
---

<html lang="en">
  <head>
