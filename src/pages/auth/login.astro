import { verifyLogin, createSession, validateSession } from "../../lib/auth";

export const prerender = false;

let error = "";

// Extract session token from cookies to check if already authenticated
const cookies = Astro.request.headers.get("cookie") || "";
const sessionToken = cookies
  .split(";")
  .find((c) => c.trim().startsWith("session="))
  ?.split("=")[1];

// If already authenticated, redirect to admin
if (sessionToken) {
  const session = await validateSession(sessionToken);
  if (session) {
    return Astro.redirect("/admin");
  }
}

// Handle form submission
if (Astro.request.method === "POST") {
  try {
    const contentType = Astro.request.headers.get("content-type") || "";

    let username = "";
    let password = "";

    // Parse form data
    if (
      contentType.includes("application/x-www-form-urlencoded") ||
      contentType.includes("multipart/form-data")
    ) {
      const formData = await Astro.request.formData();
      username = (formData.get("username") as string) || "";
      password = (formData.get("password") as string) || "";
    } else {
      // Log the content type we received for debugging
      console.warn("Unexpected Content-Type:", contentType);
      error = "Invalid request format";
    }

    if (username && password && !error) {
      const result = await verifyLogin(username, password);

      if (result) {
        // Create session and set cookie
        const newSessionToken = await createSession(result.userId);

        const forwardedProto = Astro.request.headers.get("x-forwarded-proto");
        const requestUrl = new URL(Astro.request.url);
        const isSecure =
          requestUrl.protocol === "https:" || forwardedProto === "https";

        // Set secure HTTP-only cookie and redirect
        const response = Astro.redirect("/admin");
        response.headers.set(
          "Set-Cookie",
          `session=${newSessionToken}; Path=/; HttpOnly; SameSite=Lax; Max-Age=${7 * 24 * 60 * 60}${isSecure ? "; Secure" : ""}`,
        );
        return response;
      } else {
        error = "Invalid username or password";
      }
    } else if (!error) {
      error = "Please provide both username and password";
    }
  } catch (err) {
    console.error("Login error:", err);
    error = "An error occurred during login";
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Wryteon Admin</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
          Cantarell, "Helvetica Neue", sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
      }

      .login-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        padding: 40px;
        width: 100%;
        max-width: 400px;
      }

      .logo {
        text-align: center;
        margin-bottom: 30px;
      }

      .logo h1 {
        font-size: 28px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
      }

      .logo p {
        color: #666;
        font-size: 14px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        font-weight: 500;
        font-size: 14px;
      }

      input[type="text"],
      input[type="password"] {
        width: 100%;
        padding: 12px;
        border: 2px solid #e0e0e0;
        border-radius: 6px;
        font-size: 14px;
        transition: border-color 0.3s;
      }

      input[type="text"]:focus,
      input[type="password"]:focus {
        outline: none;
        border-color: #667eea;
      }

      .error-message {
        background-color: #fee;
        border: 1px solid #fcc;
        color: #c33;
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-size: 14px;
      }

      .submit-btn {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition:
          transform 0.2s,
          box-shadow 0.2s;
      }

      .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
      }

      .submit-btn:active {
        transform: translateY(0);
      }

      .info {
        margin-top: 20px;
        padding: 12px;
        background-color: #f5f5f5;
        border-radius: 6px;
        font-size: 12px;
        color: #666;
      }

      @media (max-width: 480px) {
        .login-container {
          padding: 20px;
        }

        .logo h1 {
          font-size: 24px;
        }
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <div class="logo">
        <h1>✍️ Wryteon</h1>
        <p>Blog CMS Admin</p>
      </div>

      {error && <div class="error-message">{error}</div>}

      <form method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            required
            autofocus
            autocomplete="username"
            placeholder="Enter your username"
          />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            autocomplete="current-password"
            placeholder="Enter your password"
          />
        </div>

        <button type="submit" class="submit-btn">Sign In</button>
      </form>
    </div>
  </body>
</html>
