---
export interface Props {
  data: {
    style: string;
    items: string[];
  };
}

const { data } = Astro.props;
const isOrdered = data.style === 'ordered';
---

{isOrdered ? (
  <ol>
    {data.items.map((item: string) => (
      <li set:html={item} />
    ))}
  </ol>
) : (
  <ul>
    {data.items.map((item: string) => (
      <li set:html={item} />
    ))}
  </ul>
)}

<style>
  ol,
  ul {
    margin: 12px 0;
    padding-left: 24px;
  }

  li {
    line-height: 1.6;
    margin-bottom: 8px;
  }

  ol {
    list-style-type: decimal;
  }

  ul {
    list-style-type: disc;
  }
</style>