---
export interface Props {
  data: {
    text: string;
    caption?: string;
    alignment?: string;
  };
}

const { data } = Astro.props;
---

<blockquote set:html={data.text} />
{data.caption && <footer set:html={data.caption} />}

<style>
  blockquote {
    border-left: 4px solid #007acc;
    padding: 16px 16px 16px 20px;
    margin: 16px 0;
    background: #f5f5f5;
    border-radius: 4px;
    font-style: italic;
    color: #666;
  }

  footer {
    margin-top: 8px;
    font-size: 14px;
    color: #999;
    font-style: normal;
  }

  footer::before {
    content: 'â€” ';
  }
</style>